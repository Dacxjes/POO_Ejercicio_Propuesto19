
package poo_triangulo_ejercicio19;

import java.util.Scanner;

public class POO_Triangulo_ejercicio19 {
 
    public static void main(String[] args) {
        double lado, perimetro, area, altura;
        
        Scanner triangulo = new Scanner(System.in);
        
        System.out.println("Ingrese el lado del tiengulo: ");
        lado = triangulo.nextDouble();
        
        perimetro = 3*lado;
        altura = (lado * Math.sqrt(3))/2;
        area = (lado*altura) / 2;
        
        System.out.println("El triangulo equilatero de lado " + lado + " tiene: ");
        System.out.println("perimetro de: " + perimetro);
        System.out.println("Altura de: " + altura);
        System.out.println("Y area de: " + area );
    }
    
}
